rconfig  integer  cpm_ncells_h    namelist,dynamics  max_domains  3     -  "Number of cells in x = y directions"
rconfig  integer  cpm_noff_ew_w   namelist,dynamics  max_domains  0     -  "Number of cells from west boundary in east-west direction to start perturbations"
rconfig  integer  cpm_noff_ew_e   namelist,dynamics  max_domains  0     -  "Number of cells from east boundary in east-west direction to end perturbations"
rconfig  integer  cpm_noff_ns_s   namelist,dynamics  max_domains  0     -  "Number of cells from south boundary in south-north direction to start perturbations"
rconfig  integer  cpm_noff_ns_n   namelist,dynamics  max_domains  0     -  "Number of cells from north boundary in south-north direction to end perturbations"
rconfig  integer  cpm_ngc_v       namelist,dynamics  max_domains  1     -  "Number of gridcells per cell in z direction"
rconfig  integer  cpm_noff_v      namelist,dynamics  max_domains  0     -  "Number of gridcells from domain bottom to start perturbations"